@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div>
<div class="row ">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4 offset-md-4 text-center">
                <h2 class="title">Choose a Topic</h2>
            </div>
        </div>
        @foreach (var topic in Model.Topics)
        {
            <div class="row">
                <div class="col-md-4 offset-md-4 text-center">
                    <a class="btn btn-link" href="./Answer?Topic=@topic.Title">@topic.Title</a>
                </div>
            </div>
        }
    </div>
</div>
</div>
